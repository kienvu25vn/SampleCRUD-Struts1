<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="user" type="com.kienvu.model.User" />
	</form-beans>
	<action-mappings>
		<action path="/login-view" type="org.apache.struts.actions.ForwardAction" name="user" parameter="/login.jsp"></action>
		<action path="/login" type="com.kienvu.controller.UserController" parameter="login" name="user">
			<forward name="loginError" path="/login.jsp"></forward>
		</action>
		<action path="/home" type="com.kienvu.controller.UserController" parameter="showHomePage" name="user">
			<forward name="viewUser" path="/user/viewUser.jsp"></forward>
		</action>
		<action path="/create-user" name="user" type="org.apache.struts.actions.ForwardAction" parameter="/user/createUser.jsp">
		</action>
		<action path="/add-user" type="com.kienvu.controller.UserController" parameter="addUser" name="user">
		</action>
		<action path="/delete-user" type="com.kienvu.controller.UserController" parameter="deleteUser" name="user">
			<forward name="viewUser" path="/user/viewUser.jsp"></forward>
		</action>
	</action-mappings>
	<message-resources parameter="messages"></message-resources>
</struts-config>